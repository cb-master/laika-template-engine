{
    "name": "cb-master/laika-template-engine",
    "description": "A lightweight and powerful PHP template engine.",
    "keywords": ["PHP Template Engine", "Laika Template Engine", "TPL Engine"],
    "type": "package",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Laika\\Template\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Cloud Bill Master",
            "email": "strblackhawk@gmail.com"
        },
        {
            "name":"Showket Ahmed",
            "email":"riyadhtayf@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit --do-not-fail-on-empty-test-suite --colors=always --testdox",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "analyse": "phpstan analyse src --level=max"
    }
}